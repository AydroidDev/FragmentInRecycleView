<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:padding="1dip"
    android:layout_gravity="center">

    <TextView
        android:id="@+id/popup_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:text="this is shit"
        android:background="#80000000"
        android:textColor="@color/white"
        android:textSize="18dp"
        android:animateLayoutChanges="true"
        android:maxLines="3"
        android:gravity="left"
        android:layout_marginBottom="30dp"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:padding="4dp"/>

    <RelativeLayout
        android:id="@+id/slide_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom">

        <ImageView
            android:id="@+id/icon"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:contentDescription="@null"
            android:layout_marginLeft="8dp"
            android:layout_marginBottom="35dp"
            android:scaleType="centerCrop"
            android:src="@drawable/bad_idea"/>

        <TextView
            android:id="@+id/source"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="this is shit for test"
            android:layout_above="@+id/discription"
            android:layout_marginLeft="8dp"
            android:textSize="18sp"/>

        <ImageView
            android:id="@+id/share"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:layout_alignParentEnd="true"
            android:layout_above="@+id/discription"
            android:layout_marginEnd="26dp"
            android:contentDescription="@null"
            android:padding="4dp"
            android:scaleType="centerCrop"
            android:src="@drawable/ic_share"
            android:layout_alignParentRight="true"
            tools:ignore="RtlCompat" />

        <TextView
            android:id="@+id/discription"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="8dp"
            android:layout_marginBottom="20dp"
            android:layout_below="@+id/icon"
            android:animateLayoutChanges="true"
            android:maxLines="3"
            android:text="this is shit added by me."
            android:textSize="25dp" />


        <ImageView
            android:id="@+id/sound_gif"
            android:layout_width="40dp"
            android:layout_height="30dp"
            android:layout_alignParentEnd="true"
            android:layout_below="@+id/discription"
            android:layout_marginEnd="6dp"
            android:layout_marginTop="-40dp"
            android:layout_marginBottom="20dp"
            android:visibility="visible"
            android:contentDescription="@null"
            android:padding="4dp"
            android:scaleType="centerCrop"
            android:src="@drawable/equilizer"
            android:layout_alignParentRight="true"
            tools:ignore="RtlCompat" />
    </RelativeLayout>

</FrameLayout>